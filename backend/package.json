{
  "name": "finance-management-backend",
  "version": "1.0.0",
  "description": "Personal Finance Management API - Node.js Backend",
  "main": "src/server.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "tsx src/server.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "migrate": "node src/scripts/migrate.js",
    "migrate:up": "node src/scripts/migrate.js up",
    "migrate:status": "node src/scripts/migrate.js status",
    "migrate:rollback": "node src/scripts/migrate.js rollback",
    "migrate:mark": "node src/scripts/migrate.js mark",
    "migrate:unmark": "node src/scripts/migrate.js unmark",
    "db:setup": "node src/scripts/setup-db.js",
    "db:test": "tsx src/scripts/test-supabase-connection.ts",
    "db:test-local": "tsx src/scripts/test-db-connection.ts",
    "db:migrate": "tsx src/scripts/execute-local-migrations.ts",
    "db:create-tables": "tsx src/scripts/create-tables.ts",
    "db:fix-keys": "tsx src/scripts/fix-foreign-keys.ts"
  },
  "keywords": [
    "finance",
    "management",
    "api",
    "nodejs",
    "typeorm"
  ],
  "author": "Finance Management Team",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.18.1",
    "@supabase/supabase-js": "^2.39.0",
    "dotenv": "^16.6.1",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "typeorm": "^0.3.20",
    "reflect-metadata": "^0.2.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.0",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
