{
  "name": "finance-management-backend",
  "version": "1.0.0",
  "description": "Personal Finance Management API - Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --port ${PORT:-3002}",
    "dev:node": "wrangler dev --port ${PORT:-3002} --local",
    "deploy": "wrangler deploy",
    "build": "wrangler deploy --dry-run",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "migrate": "node src/scripts/migrate.js",
    "migrate:up": "node src/scripts/migrate.js up",
    "migrate:status": "node src/scripts/migrate.js status",
    "migrate:rollback": "node src/scripts/migrate.js rollback",
    "migrate:mark": "node src/scripts/migrate.js mark",
    "migrate:unmark": "node src/scripts/migrate.js unmark",
    "db:setup": "node src/scripts/setup-db.js"
  },
  "keywords": [
    "finance",
    "management",
    "api",
    "cloudflare-workers"
  ],
  "author": "Finance Management Team",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.18.1",
    "@supabase/supabase-js": "^2.39.0",
    "dotenv": "^16.6.1",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "wrangler": "^3.28.0"
  }
}
